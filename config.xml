<?xml version='1.0' encoding='utf-8'?>
<widget id="com.skynxt" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>SkyNxt</name>
    <description>
        Blockchain DApp.
    </description>
    <author email="contact@skynxt.info" href="http://skynxt.info">
        SkyNxt Team
    </author>
    <content src="index.html" />
    <access origin="*" />
	<preference name="SplashScreen" value="screen" />
	<preference name="SplashScreenDelay" value="10000" />
	<preference name="SplashMaintainAspectRatio" value="true" />

	<gap:platform name="android" />
		<gap:plugin name="org.apache.cordova.file" source="npm" />
		<gap:plugin name="org.apache.cordova.splashscreen" source="npm" />
		<gap:plugin name="phonegap-plugin-barcodescanner" source="npm" />

		<icon src="res/android/SkyNxt.png" gap:platform="android" gap:qualifier="ldpi" />
		<icon src="res/android/SkyNxt.png" gap:platform="android" gap:qualifier="mdpi" />
		<icon src="res/android/SkyNxt.png" gap:platform="android" gap:qualifier="hdpi" />
		<icon src="res/android/SkyNxt.png" gap:platform="android" gap:qualifier="xhdpi" />

	  <!-- you can use any density that exists in the Android project -->
		<gap:splash src="res/screen/android/SkyNxt.png" gap:platform="android" gap:qualifier="ldpi" />
		<gap:splash src="res/screen/android/SkyNxt.png" gap:platform="android" gap:qualifier="mdpi" />
		<gap:splash src="res/screen/android/SkyNxt.png" gap:platform="android" gap:qualifier="hdpi" />
		<gap:splash src="res/screen/android/SkyNxt.png" gap:platform="android" gap:qualifier="xhdpi" />
		<gap:splash src="res/screen/android/SkyNxt.png" gap:platform="android" gap:qualifier="fr-xhdpi" />
		<gap:splash src="res/screen/android/SkyNxt.png" gap:platform="android" gap:qualifier="port-xxhdpi" />
		<gap:splash src="res/screen/android/SkyNxt.png" gap:platform="android" gap:qualifier="land-xxhdpi" />

</widget>
